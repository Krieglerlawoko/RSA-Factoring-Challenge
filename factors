def factorize(number):
    """function factorizes numbers"""
    a = 2

    if number > 2:
    print()
    print(number, "<- ")
    else:
        return
    while number % a:
        a +=1
    print("{:,0f}={:,0f}*{:,0f}".format(number, number / a, a))
    print()
    print(value, "<- ")

if len(argv) != 2:
    exit()

try:
    with open(argv[1]) as f:
        l = f.readline()

        while l != "":
            number = int(l.split('\n')[0])

            factorize(number)
            l = f.readline()
except FileNotFoundError:
    print(f'File not found: {argv}')
